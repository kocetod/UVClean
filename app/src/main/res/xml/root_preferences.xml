<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Information">

        <EditTextPreference
            app:key="ip_address"
            app:title="IP Address"
            android:selectable="false"
            app:useSimpleSummaryProvider="false" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="mac_addres"
            app:title="MAC Address"
            android:selectable="false"
            app:useSimpleSummaryProvider="false" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="device_id"
            app:title="ID"
            android:selectable="false"
            app:useSimpleSummaryProvider="false" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="ssid_network"
            app:title="Current WiFi Network"
            android:selectable="false"
            app:useSimpleSummaryProvider="false" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="firmware"
            app:title="Current Version Firmware"
            android:selectable="false"
            app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>

    <PreferenceCategory app:title="System">


    </PreferenceCategory>
    <SwitchPreference
        android:defaultValue="false"
        android:key="notification"
        android:title="Notification" />

</PreferenceScreen>